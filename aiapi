import tkinter as tk
from PIL import Image, ImageTk
import requests

def get_duck_image():
    # Duck image API (Unsplash API used here as an example)
    api_url = "https://source.unsplash.com/400x300/?duck"

    # Fetch the image from the API
    response = requests.get(api_url)
    
    # Open and display the image
    image = Image.open(requests.get(api_url, stream=True).raw)
    photo = ImageTk.PhotoImage(image)
    
    # Display the image in the Tkinter window
    label.config(image=photo)
    label.image = photo

# Create the main Tkinter window
root = tk.Tk()
root.title("Duck Image Viewer")

# Create a button to fetch and display the duck image
button = tk.Button(root, text="Show Duck", command=get_duck_image)
button.pack(pady=10)

# Create a label to display the duck image
label = tk.Label(root)
label.pack()

# Run the Tkinter event loop
root.mainloop()
